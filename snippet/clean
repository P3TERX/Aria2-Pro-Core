CLEANUP_SRC() {
    cd $BUILD_DIR
    rm -rf \
        zlib \
        expat \
        c-ares \
        openssl \
        sqlite3 \
        libssh2 \
        $ARIA2_CODE_DIR
}

CLEANUP_LIB() {
    rm -rf $PREFIX
}

CLEANUP_ALL() {
    CLEANUP_SRC
    CLEANUP_LIB
}
